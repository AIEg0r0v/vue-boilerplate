block about
  .about__user
    .user
      .user__avatar
        .user__avatar-style
          +image("content/alex.jpg", "user__avatar-pic")
      - 
        var userInfo = {
          location: "Copenhagen",
          age: "33",
          birthDate: "26th of November 1987"
        };
      table.user__data
        each value, key in userInfo
          tr.user__data-row
            td.user__data-title #{key}
            td.user__data-value #{value}
