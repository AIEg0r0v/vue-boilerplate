.edit-line-component {
  &.blocked {
    opacity: 0.5;
    filter: grayscale(100%);
    pointer-events: none;
  }
}
.text {
  padding: 0.625rem 0;
  border-bottom: 1px solid transparent;
  line-height: 1.15;
}
.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input {
  width: 60%;
}

.buttons {
  display: flex;
}

.button-icon {
  margin-right: 20px;
  &:last-child {
    margin-right: 0;
  }
  background: transparent;
}