.headline-container {
  display: flex;
  flex-flow: nowrap row;
  align-items: center;
  width: 100%;
  justify-content: center;
  height: 5.3rem;
}

.headline-component {
  background: #43436B;
}
.headline-title {
  margin-left: 2rem;
  font-size: 14px;
  line-height: 19px;
  color: rgba(255, 255, 255, 0.5);
}
.headline-btns {
  margin-left: auto;
  margin-right: 4rem;
}

.headline-btn {
  background-color: transparent;
  font-size: 16px;
  line-height: 22px;
  text-decoration-line: underline;
  color: rgba(255, 255, 255, 0.9);
  &:hover {
    color: rgba(255, 255, 255, 0.5);
  }
}