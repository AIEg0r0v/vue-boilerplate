.header {
  display: flex;
  margin-bottom: 4rem;
  justify-content: flex-start;
}

.title {
  margin-right: 4rem;
  font-size: 1.3125rem;
  font-weight: 800;
  color: $text-color;
}

.works {
    display: flex;
    flex-flow: row wrap;
    
}

.work {
  width: calc(100%/3 - 2rem);
  margin-right: 2rem;
  margin-bottom: 2rem;
  background: #FFFFFF;
  box-shadow: 0.3rem 0.3rem 0.6rem rgba(61, 61, 61, 0.1);
/* @include tablets {
