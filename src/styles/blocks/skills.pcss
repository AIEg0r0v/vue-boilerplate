.backpack__style {
  width: 700px;
  margin-top: 100px;
}

.skill__circle {
  fill: transparent;
  
  &--layer--under{
    stroke: #eaeaea;
    stroke-width: 5px;
  }
  &--layer--above{
    stroke-width: 12px;
    stroke-dasharray: 251;
    stroke-dashoffset: 75; //default value - around 70%
  }
}
.skill_title{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-weight: 800;
  font-size: 18px;
  color: rgba(70, 78, 98, 0.5);
  line-height: 25px;
  padding: 14px;
}