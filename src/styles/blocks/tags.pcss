.tags {
  display: flex;
  flex-flow: wrap row;
  margin-bottom: 1.18rem;
}
.tags__items {
  background: #F3F6F9;
  border-radius: 40px;
  padding: 0.875rem 1.375rem;
  margin-right: 0.5rem;
  margin-bottom: 1rem;
  &:last-child {
    margin-right: 0px;
  }
}
.tag {
  font-weight: 600;
  font-size: 0.9375rem;
  color: rgba(70, 78, 98, 0.8);
}
