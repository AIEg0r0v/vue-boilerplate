script(type="text/x-template")#work-thumbs
    .works-preview__thumbs
        ul.thumbs
            - for (var i = 4; i > 0; i--)
                li.thumbs__item
                    a(href="").thumbs__link
                    +image(`content/Preview-${i}.png`, "thumbs__pic")

script(type="text/x-template")#work-tags
    ul.tags
        li.tags__items(v-for="tag in tags")
            .tag {{item}}

script(type="text/x-template")#work-info
    .works-preview__info
        work-tags(:tags="work.tags")
        .works-preview__title {{work.title}}
        .works-preview__desc
            p {{work.description}}
        .works-preview__visit
            +icon("link","link__icon")
            a(href="").iconed-link Visit Website