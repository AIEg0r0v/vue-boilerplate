script(type="text/x-template")#works-list
    .works__content
        .works-preview
            .works-preview__pictures(data-slide="2")
                +image("content/Preview-1.Big.png", "works-preview__img")
                work-thumbs
            work-btns
        work-info(:work="works[0]")    

